<script>
    function multiply() {
        a = Number(document.getElementById('Quantity').value);
        b = Number(document.getElementById('Price').value);
        c = a * b;

        document.getElementById('GST').value = c;
        var d = c + (c * 0.18);
        console.log(d);
        document.getElementById('TotalPrice').value = d;
    }
</script>

