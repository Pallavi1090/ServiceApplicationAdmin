<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>DataTable</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Enquries List</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col-md-6 col-sm-12 text-right">
                        <div class="dropdown">
                            <a class="btn btn-primary dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                Year 2021
                            </a>


                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" href="#">January</a>
                                <a class="dropdown-item" href="#">February</a>
                                <a class="dropdown-item" href="#">March</a>
                                <a class="dropdown-item" href="#">April</a>
                                <a class="dropdown-item" href="#">May</a>
                                <a class="dropdown-item" href="#">June</a>
                                <a class="dropdown-item" href="#">July</a>
                                <a class="dropdown-item" href="#">August</a>
                                <a class="dropdown-item" href="#">September</a>
                                <a class="dropdown-item" href="#">October</a>
                                <a class="dropdown-item" href="#">November</a>
                                <a class="dropdown-item" href="#">December</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Simple Datatable start -->
            <div class="card-box mb-30">
                <div class="pd-20">
                    <h4 class="text-blue h4">Details</h4>
                    <p class="mb-0">you can find more options <a class="text-primary" href="https://datatables.net/" target="_blank">Click Here</a></p>
                </div>

                <div class="pb-20">
                    <table class="data-table table stripe hover nowrap">
                        <thead>
                            <tr>
                                <th class="table-plus datatable-nosort">uName</th>
                                <th>uNumber</th>
                                <th>uAlterNumber</th>
                                <th>uMail</th>
                                <th>PickUpTime</th>
                                <th>PickUpDate</th>
                                <th>deliverDate</th>
                                <th>deliverAddres</th>
                                <th>Image</th>
                                <th>pType</th>
                                <th>pName</th>
                                <th>pDescription</th>
                                <th>pPrice</th>
                                <th>pMrpPrice</th>
                                <th>delivercharge</th>
                                <th>pOffers</th>
                                <th>pSpecifications</th>
                                <th>orderType</th>
                                <th>OrderStatus</th>
                                <th>orderDate</th>
                                <th class="datatable-nosort">Action</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tbody>
                                <tr>
                                    <td class="table-plus">@Html.DisplayFor(modelItem => item.uName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.uNumber)</td>
                                    <td>@Html.DisplayFor(modelItem => item.uAlterNumber)</td>
                                    <td>@Html.DisplayFor(modelItem => item.uMail) </td>
                                    <td>@Html.DisplayFor(modelItem => item.PickUpTime)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PickUpDate)</td>
                                    <td>@Html.DisplayFor(modelItem => item.deliverDate)</td>
                                    <td>@Html.DisplayFor(modelItem => item.deliverAddres)</td>
                                    <td><img src="@Url.Content(item.ImagePath)" alt="Image 1" ; style="max-width: 100px; max-height: 100px"></td>
                                    <td>@Html.DisplayFor(modelItem => item.pType)</td>
                                    <td>@Html.DisplayFor(modelItem => item.pName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.pDescription)</td>
                                    <td>@Html.DisplayFor(modelItem => item.pPrice)</td>
                                    <td>@Html.DisplayFor(modelItem => item.pMrpPrice)</td>
                                    <td>@Html.DisplayFor(modelItem => item.delivercharge)</td>
                                    <td>@Html.DisplayFor(modelItem => item.pOffers)</td>
                                    <td>@Html.DisplayFor(modelItem => item.pSpecifications)</td>
                                    <td>@Html.DisplayFor(modelItem => item.orderType)</td>
                                    <td>@Html.DisplayFor(modelItem => item.OrderStatus)</td>
                                    <td>@Html.DisplayFor(modelItem => item.orderDate)</td>
                                    <td>
                                        <div class="dropdown">
                                            <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                                <i class="dw dw-more"></i>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                                @*<i class="dw dw-eye"></i>*@
                                                <a class="dropdown-item" href="@Html.ActionLink("Details", "Details", new { id = item.Id })">Details</a>
                                                <a class="dropdown-item" href="@Html.ActionLink("Edit", "Edit", new { id = item.Id }) ">Edit @*<i class="dw dw-edit2"></i>*@</a>
                                                <a class="dropdown-item" href="@Html.ActionLink("Delete", "Delete", new { id = item.Id })">Delete @*<i class="dw dw-delete-3"></i>*@</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>

                            </tbody>
                        }
                    </table>
                </div>
            </div>
            <!-- Checkbox select Datatable End -->
            <!-- Export Datatable start -->
            <div class="card-box mb-30">
                <div class="pd-20">
                    <h4 class="text-blue h4">Data Table with Export Buttons</h4>
                </div>
                <div class="pb-20">
                    <table class="table hover multiple-select-row data-table-export nowrap">
                        <thead>
                            <tr>
                                <th class="table-plus datatable-nosort">uName</th>
                                <th>uNumber</th>
                                <th>uAlterNumber</th>
                                <th>uMail</th>
                                <th>PickUpTime</th>
                                <th>PickUpDate</th>
                                <th>deliverDate</th>
                                <th>deliverAddres</th>
                                <th>ImagePath</th>
                                <th>pType</th>
                                <th>pName</th>
                                <th>pDescription</th>
                                <th>pPrice</th>
                                <th>pMrpPrice</th>
                                <th>delivercharge</th>
                                <th>pOffers</th>
                                <th>pSpecifications</th>
                                <th>orderType</th>
                                <th>OrderStatus</th>
                                <th>orderDate</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tbody>
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.uName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.uNumber)</td>
                                    <td>@Html.DisplayFor(modelItem => item.uAlterNumber)</td>
                                    <td>@Html.DisplayFor(modelItem => item.uMail) </td>
                                    <td>@Html.DisplayFor(modelItem => item.PickUpTime)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PickUpDate)</td>
                                    <td>@Html.DisplayFor(modelItem => item.deliverDate)</td>
                                    <td>@Html.DisplayFor(modelItem => item.deliverAddres)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ImagePath)</td>
                                    <td>@Html.DisplayFor(modelItem => item.pType)</td>
                                    <td>@Html.DisplayFor(modelItem => item.pName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.pDescription)</td>
                                    <td>@Html.DisplayFor(modelItem => item.pPrice)</td>
                                    <td>@Html.DisplayFor(modelItem => item.pMrpPrice)</td>
                                    <td>@Html.DisplayFor(modelItem => item.delivercharge)</td>
                                    <td>@Html.DisplayFor(modelItem => item.pOffers)</td>
                                    <td>@Html.DisplayFor(modelItem => item.pSpecifications)</td>
                                    <td>@Html.DisplayFor(modelItem => item.orderType)</td>
                                    <td>@Html.DisplayFor(modelItem => item.OrderStatus)</td>
                                    <td>@Html.DisplayFor(modelItem => item.orderDate)</td>
                                </tr>

                            </tbody>
                        }
                    </table>
                </div>
            </div>
            <!-- Export Datatable End -->
        </div>

    </div>
</div>
